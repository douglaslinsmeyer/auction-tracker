# Development Environment Configuration
# This file is for development use

# Build Configuration
BUILD_TARGET=development

# Node Environment
NODE_ENV=development

# Port Configuration
PORT=3000
REDIS_PORT=6379

# Authentication
AUTH_TOKEN=dev-token

# Logging
LOG_LEVEL=debug
DEBUG=*

# Volume Configuration (mount source for hot-reload)
SRC_VOLUME=./src:/app/src
PUBLIC_VOLUME=./public:/app/public

# Feature Flags
ENABLE_POLLING_QUEUE=true
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000