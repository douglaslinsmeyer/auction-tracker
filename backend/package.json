{
  "name": "auction-backend",
  "version": "1.0.0",
  "description": "Backend service for Auction Helper - handles 24/7 monitoring and automated bidding",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:unit": "jest --selectProjects=unit",
    "test:integration": "jest --selectProjects=integration",
    "test:e2e": "jest --config=jest.config.puppeteer.js",
    "test:bdd": "cucumber-js --config cucumber.js",
    "test:bdd:ci": "cucumber-js --config cucumber.js --profile ci",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "../scripts/run-all-tests.sh",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "quality": "npm run lint && npm run format",
    "quality:fix": "npm run lint:fix && npm run format:fix"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eventsource": "^4.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "node-cron": "^3.0.2",
    "prom-client": "^15.1.3",
    "redis": "^4.6.12",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@jest/globals": "^29.7.0",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.56.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^2.1.0",
    "jest": "^29.7.0",
    "jest-puppeteer": "^10.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.4",
    "puppeteer": "^23.0.0",
    "redis-mock": "^0.56.3",
    "sinon": "^17.0.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
